@using App.Entities.Concrete
@using App.Web.Mvc.Areas.Admin.Models;

@model AddPostViewModel
@{
    ViewData["Title"] = "AddPost";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{
    var user = TempData["User"] as User;
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">İçerik Ekleme Paneli</h4>
            <p class="card-description">İçerik Ekleme Paneli</p>
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <input type="hidden" class="form-control" asp-for="UserId" value="@ViewBag.userId" />

                </div>
                <div class="form-group">
                    
                    <input type="hidden" class="form-control" asp-for="PostId" required>
                </div>

                <div class="form-group">
                    <label for="exampleInputName1">Başlık</label>
                    <input type="text" class="form-control" asp-for="Title" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Açıklama</label>
                    <textarea class="form-control" asp-for="Content" required></textarea>
                </div>
                <div class="form-group">
                    <label for="exampleSelectGender">Kategori</label>
                    <select class="form-control" asp-for="CategoryId">
                        @foreach (var category in TempData["Category"] as IEnumerable<Category>)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label>Resim Yükle</label>
                    <input type="file" asp-for="ImagePath" class="file-upload-default" />
                    <div class="form-group">
                        <label for="AdvertImages">Resim:</label>
                        <input type="file" class="form-control" asp-for="ImagePath" required multiple>
                        <span class="text-danger">@Html.ValidationMessageFor(m => m.ImagePath)</span>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary me-2"> Kaydet </button>
                <button class="btn btn-light">Geri Dön</button>
            </form>
        </div>
    </div>
</div>