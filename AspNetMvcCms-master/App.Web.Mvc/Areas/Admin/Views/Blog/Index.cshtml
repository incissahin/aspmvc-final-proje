@using App.Entities.Concrete
@model List<Post>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title"> İçerik Kontrol Paneli </h4>
			<div class="table-responsive">
				<table class="table">
					<thead>
						<tr>
							<th> <b>İşlemler</b></th>
							<th> <b>Kullanıcı No</b></th>
							<th> <b> Başlık </b> </th>
							<th> <b> Açıklama </b></th>
							
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>
									<a asp-controller="Blog" asp-action="DeleteBlog" asp-route-id="@item.Id" class="btn btn-inverse-danger">Sil</a>
									<a asp-controller="Blog" asp-action="EditBlog" asp-route-id="@item.Id" class="btn btn-inverse-success">Düzenle</a>
									<a asp-controller="Blog" asp-action="DetailsBlog" asp-route-id="@item.Id" class="btn btn-inverse-info">Detay</a>
								</td>
								<td>
									@item.UserId
								</td>
								<td>
									@if (item.Title.Length > 40)
									{
										<text>@item.Title.Substring(0, 40)...</text>
									}
									else
									{
										@item.Title
									}
								</td>

								<td>
									@if (item.Content.Length > 40)
									{
										<text>@item.Content.Substring(0, 40)...</text>
									}
									else
									{
										@item.Content
									}
								</td>

								
							</tr>
						}
					</tbody>
				</table>
				<a asp-controller="Blog" asp-action="AddPost" class="btn btn-inverse-primary"> Yeni İçerik Ekle </a>
			</div>
		</div>
	</div>
</div>

