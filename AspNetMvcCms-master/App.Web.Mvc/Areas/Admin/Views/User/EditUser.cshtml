@model App.Entities.Concrete.User
@{
    ViewData["Title"] = "EditUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Default form</h4>
			<p class="card-description">Kullanici Detay Paneli</p>
			<form class="forms-sample" asp-action="EditUser" method="post">
				<div class="form-group">
					<label for="exampleInputUsername1">Kategori Adı</label>
					<input type="text" class="form-control" asp-for="Name" placeholder="Kategori Adı"  />
				</div>
				<div class="form-group">
					<label for="Acıklama">Mail Adresi</label>
					<input type="text" class="form-control" asp-for="Email" placeholder="Mail Adresi"  />
				</div>
				<div class="form-group">
					<label for="Acıklama">Telefon</label>
					<input type="text" class="form-control" asp-for="Phone" placeholder="Telefon"  />
				</div>
				<div class="form-group">
					<label for="Acıklama">Şehir</label>
					<input type="text" class="form-control" asp-for="City" placeholder="Şehir"  />
				</div>
				<div class="form-group">
					<label for="Acıklama">Şifre</label>
					<input type="text" class="form-control" asp-for="Password" placeholder="Şifre" />
				</div>
				<div class="form-group">
					<label for="Acıklama">Şifre Tekrar</label>
					<input type="text" class="form-control" asp-for="PasswordConfirm" placeholder="Şifre Tekrar" />
				</div>
				<button type="submit" class="btn btn-primary">Kaydet</button>
				<input type="hidden" asp-for="Id" />
			</form>
		</div>
	</div>
</div>

