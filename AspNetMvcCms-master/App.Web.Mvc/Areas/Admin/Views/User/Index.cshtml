@using App.Entities.Concrete
@model List<User>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title"> Kategori Kontrol Paneli </h4>
			<div class="table-responsive">
				<table class="table">
					<thead>
						<tr>
							<th> <b>İşlemler</b></th>
							<th> <b>#</b></th>
							<th> <b> Adı </b> </th>
							<th> <b> Mail Adresi </b></th>
							<th> <b> Admin Yetkisi</b></th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>
									<a asp-controller="User" asp-action="DeleteUser" asp-route-id="@item.Id" class="btn btn-inverse-danger">Sil</a>
									<a asp-controller="User" asp-action="EditUser" asp-route-id="@item.Id" class="btn btn-inverse-primary">Düzenle</a>
									<a asp-controller="User" asp-action="DetailsUser" asp-route-id="@item.Id" class="btn btn-inverse-info">Detaylar</a>
									@if(item.IsAdmin == true)
									{
										<a asp-controller="User" asp-action="UnRoleUser" asp-route-id="@item.Id" class="btn btn-inverse-warning">Yetki Kaldır</a>
									}
									else
									{
										<a asp-controller="User" asp-action="RoleUser" asp-route-id="@item.Id" class="btn btn-inverse-success">Yetki ver</a>
									}
									
									
								</td>
								<td>
									@item.Id
								</td>
								<td>
									@item.Name
								</td>
								<td>
									@item.Email
								</td>
								<td>
									<input type="checkbox" class="custom-checkbox" asp-for="@item.IsAdmin" placeholder="Rol" />
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

