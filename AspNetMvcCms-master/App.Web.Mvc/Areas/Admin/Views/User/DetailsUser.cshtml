@model App.Entities.Concrete.User
@{
	ViewData["Title"] = "DetailsUser";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Default form</h4>
			<p class="card-description">Kullanici Detay Paneli</p>
			<form class="forms-sample" asp-action="DetailsUser" method="post">
				<div class="form-group">
					<label for="exampleInputUsername1">Kategori Adı</label>
					<input type="text" class="form-control" asp-for="Name" placeholder="Kategori Adı" readonly />
				</div>
				<div class="form-group">
					<label for="Acıklama">Mail Adresi</label>
					<input type="text" class="form-control" asp-for="Email" placeholder="Mail Adresi" readonly />
				</div>
				<div class="form-group">
					<label for="Acıklama">Telefon</label>
					<input type="text" class="form-control" asp-for="Phone" placeholder="Telefon" readonly />
				</div>
				<div class="form-group">
					<label for="Acıklama">Şehir</label>
					<input type="text" class="form-control" asp-for="City" placeholder="Şehir" readonly />
				</div>
				<div class="form-group">
					<label for="Acıklama">Rol</label>
					<input type="checkbox" class="fa-check-circle" asp-for="IsAdmin" placeholder="Rol" readonly />
				</div>
				<div class="form-group">
					<label for="Acıklama">Kayıt Tarihi</label>
					
					  <input type="text" class="form-control" asp-for="CreatedAt" placeholder="Kayıt Tarihi" readonly />
					

				</div>
				<input type="hidden" asp-for="Id" />
			</form>
		</div>
	</div>
</div>


