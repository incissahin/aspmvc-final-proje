@using App.Entities.Concrete
@model List<Page>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title"> Sayfa Kontrol Paneli </h4>
			<div class="table-responsive">
				<table class="table">
					<thead>
						<tr>
							<th> <b>İşlemler</b></th>
							<th> <b> Başlık </b> </th>
							<th> <b> Açıklama </b></th>
							<th> <b> Drurum </b></th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>
									<a asp-controller="Page" asp-action="DeletePage" asp-route-id="@item.Id" class="btn btn-inverse-danger">Sil</a>
									<a asp-controller="Page" asp-action="EditPage" asp-route-id="@item.Id" class="btn btn-inverse-success">Düzenle</a>
								</td>
								<td>
									@item.Title
								</td>
								<td>
									@item.Content
								</td>
								<td>

									<input type="checkbox" class="form-check-input" asp-for="@item.IsActive" />
									

								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
