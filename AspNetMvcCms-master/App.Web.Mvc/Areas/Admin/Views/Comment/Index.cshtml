@using App.Entities.Concrete
@model List<PostComment>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title"> Yorum Kontrol Paneli </h4>
			<div class="table-responsive">
				<table class="table">
					<thead>
						<tr>
							<th> <b>İşlemler</b></th>
							<th> <b> Yorum </b> </th>
							<th> <b> Yazar </b></th>
							<th> <b> Yorum Durumu </b></th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>
									<a asp-controller="Comment" asp-action="DeleteComment" asp-route-id="@item.Id" class="btn btn-inverse-danger">Sil</a>
									<a asp-controller="Comment" asp-action="DetailsComment" asp-route-id="@item.Id" class="btn btn-inverse-info">Detay</a>
									@if (item.IsActive == true)
									{
										<a asp-controller="Comment" asp-action="UnComment" asp-route-id="@item.Id" class="btn btn-inverse-warning">Kaldır</a>
									}
									else
									{
										<a asp-controller="Comment" asp-action="CommentActive" asp-route-id="@item.Id" class="btn btn-inverse-success">Yayımla</a>
									}
								</td>
								<td>
									@item.Comment
								</td>
								<td>
									@item.User.Name
								</td>
								
								<td>
									<input type="checkbox" class="custom-checkbox" asp-for="@item.IsActive" placeholder="Rol" />
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

