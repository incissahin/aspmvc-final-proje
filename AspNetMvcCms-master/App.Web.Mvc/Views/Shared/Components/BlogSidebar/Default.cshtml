@using App.Entities.Concrete;

@{
	var categories = ViewBag.categories as IEnumerable<Category>;
	var posts = ViewBag.posts as IEnumerable<Post>;
}

<div class="col-lg-4">
	<div class="sidebar-wrap pl-lg-4 mt-5 mt-lg-0">
		<div class="sidebar-widget search  mb-3 ">
			<h5>Search Here</h5>
			<form action="#" class="search-form">
				<input type="text" class="form-control" placeholder="search">
				<i class="ti-search"></i>
			</form>
		</div>


		<div class="sidebar-widget latest-post mb-3">
			<h5>Son Eklenenler</h5>
			@foreach(var item in posts)
			{
				<div class="py-2">
					<span class="text-sm text-muted">@item.CreatedAt</span>
					<h6 class="my-2"><a asp-action="Detail" asp-controller="Post" asp-route-id="@item.Id">@item.Title</a></h6>
				</div>
			}
			
		</div>

		<div class="sidebar-widget category mb-3">
			<h5 class="mb-4">Kategoriler</h5>

			<ul class="list-unstyled">
				@foreach(var category in categories)
				{
					<li class="align-items-center">
						<a asp-action="Index" asp-controller="Post" asp-route-categoryId="@category.Id">@category.Name</a>
						<span>(@category.CategoryPosts.Count)</span>
					</li>
				}

			</ul>
		</div>



		<div class="sidebar-widget schedule-widget mb-3">
			<h5 class="mb-4">Mesai Saatleri</h5>

			<ul class="list-unstyled">
				<li class="d-flex justify-content-between align-items-center">
					<span>Monday - Friday</span>
					<span>9:00 - 17:00</span>
				</li>
				<li class="d-flex justify-content-between align-items-center">
					<span>Saturday</span>
					<span>9:00 - 16:00</span>
				</li>
				<li class="d-flex justify-content-between align-items-center">
					<span>Sunday</span>
					<span>Closed</span>
				</li>
			</ul>

			<div class="sidebar-contatct-info mt-4">
				<p class="mb-0">Need Urgent Help?</p>
				<h3>+23-4565-65768</h3>
			</div>
		</div>

	</div>
</div>